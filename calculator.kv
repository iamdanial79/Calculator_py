<Cgrid>
    rows:5
    spacing:10

    BoxLayout:
        TextInput:
            font_size : 32
            multiline : False
            id: entry
    BoxLayout:
        spacing:10
        Button:
            text:"7"
            on_press: entry.text += self.text
        Button:
            on_press: entry.text += self.text
            text:"8"
        Button:
            on_press: entry.text += self.text
            text:'9'
        Button:
            on_press: entry.text += self.text
            text:'+'
    BoxLayout:
        spacing:10
        Button:
            on_press: entry.text += self.text
            text:'4'
        Button:
            on_press: entry.text += self.text
            text:'5'
        Button:
            on_press: entry.text += self.text
            text:'6'
        Button:
            on_press: entry.text += self.text
            text:'-'
    BoxLayout:
        spacing:10
        Button:
            on_press: entry.text += self.text
            text:'1'
        Button:
            on_press: entry.text += self.text
            text:'2'
        Button:
            on_press: entry.text += self.text
            text:'3'
        Button:
            on_press: entry.text += self.text
            text:'*'
    BoxLayout:
        spacing:10
        Button:
            on_press: entry.text += self.text
            text:'R'
        Button:
            on_press: entry.text += self.text
            text:'0'
        Button:
            on_press: entry.text += self.text
            text:'='
        Button:
            on_press: entry.text += self.text
            text:'/'

